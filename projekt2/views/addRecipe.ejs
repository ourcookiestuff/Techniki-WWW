<main>
<div class="container mt-5" id="form">
    <h2 style="margin-bottom: 30px">Dodaj nowy przepis</h2>
    <div class="row" id="flex_form">
        <div class="col-3" id="flex_stepsTabs">
            <ul class="nav flex-column nav-pills" id="stepsTabs" role="tablist">
                <li class="nav-item">
                    <button class="nav-link active" id="step1-tab" data-bs-toggle="pill" data-bs-target="#step1"
                            type="button" role="tab" aria-controls="step1" aria-selected="true">
                        Krok 1:
                        Ogólne informacje
                    </button>
                </li>
                <li class="nav-item">
                    <button class="nav-link disabled-tab" id="step2-tab" data-bs-toggle="pill" data-bs-target="#step2"
                            type="button" role="tab" aria-controls="step2" aria-selected="false" disabled>
                        Krok 2:
                        Składniki
                    </button>
                </li>
                <li class="nav-item">
                    <button class="nav-link disabled-tab" id="step3-tab" data-bs-toggle="pill" data-bs-target="#step3"
                            type="button" role="tab" aria-controls="step3" aria-selected="false" disabled>
                        Krok 3:
                        Sposób przygotowania
                    </button>
                </li>
                <li class="nav-item">
                    <button class="nav-link disabled-tab" id="step4-tab" data-bs-toggle="pill" data-bs-target="#step4"
                            type="button" role="tab" aria-controls="step4" aria-selected="false" disabled>
                        Krok 4:
                        Dodaj zdjęcie
                    </button>
                </li>
            </ul>
        </div>
        <div class="col-9" id="flex_stepsContent">
            <div class="tab-content" id="stepsContent">
                <!-- Krok 1 -->
                <div class="tab-pane fade show active" id="step1" role="tabpanel" aria-labelledby="step1-tab">
                    <form id="formStep1" method="POST">
                        <h3>Krok 1: Ogólne informacje</h3>
                        <div class="form-group mb-3">
                            <label for="title">Nazwa potrawy</label>
                            <input type="text" class="form-control" id="title" name="title" placeholder="Podaj nazwę potrawy" required>
                        </div>
                        <div class="form-group mb-3">
                            <label for="category">Kategoria potrawy</label>
                            <select class="form-control" id="category" name="category" required>
                                <option value="">Wybierz kategorię</option>
                                <option value="Zupy">Zupy</option>
                                <option value="Dania główne">Dania główne</option>
                                <option value="Śniadania">Śniadania</option>
                                <option value="Makarony">Makarony</option>
                                <option value="Desery">Desery</option>
                                <option value="Sałatki">Sałatki</option>
                                <option value="Inne">Inne</option>
                            </select>
                        </div>
                        <div class="form-group mb-3">
                            <label for="customRange2" class="form-label">Stopień trudności</label>
                            <input type="range" class="form-range" min="1" max="3" id="customRange2" value="2">
                            <div class="range-labels">
                                <span>Łatwy</span>
                                <span>Średni</span>
                                <span>Trudny</span>
                            </div>
                        </div>
                        <div class="form-group mb-3">
                            <label for="time-1">Czas przygotowywania w minutach</label>
                            <input type="number" class="form-control" id="time-1" name="time" min="0" placeholder="Podaj czas" required>
                        </div>
                        <button type="button" class="btn btn-primary" id="saveStep1">Zapisz i przejdź dalej</button>
                    </form>
                </div>

                <!-- Krok 2 -->
                <div class="tab-pane fade" id="step2" role="tabpanel" aria-labelledby="step2-tab">
                    <form id="formStep2" method="POST">
                        <h3>Krok 2: Składniki</h3>
                        <div id="ingredients-list">
                            <div class="ingredient-item">
                                <div class="row mb-4 align-items-center">
                                    <div class="col-md-5">
                                        <label for="ingredient-1">Nazwa składnika</label>
                                        <input type="text" class="form-control" id="ingredient-1" name="ingredients[0][name]" placeholder="Podaj nazwę składnika" required>
                                    </div>
                                    <div class="col-md-3">
                                        <label for="amount-1">Ilość</label>
                                        <input type="number" min="1" class="form-control" id="amount-1" name="ingredients[0][amount]" placeholder="Podaj ilość">
                                    </div>
                                    <div class="col-md-3">
                                        <label for="unit-1">Jednostka</label>
                                        <select class="form-control" id="unit-1" name="ingredients[0][unit]">
                                            <option value="">Wybierz jednostkę</option>
                                            <option value="g">g</option>
                                            <option value="ml">ml</option>
                                            <option value="łyżka">łyżka</option>
                                            <option value="łyżeczka">łyżeczka</option>
                                            <option value="szklanka">szklanka</option>
                                            <option value="sztuka">sztuka</option>
                                        </select>
                                    </div>
                                    <div class="col-md-1">
                                        <div class="btn-group" role="group" aria-label="Basic outlined example">
                                            <button type="button" class="btn btn-lg btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <button type="button" class="btn btn-secondary" id="addIngredient">Dodaj składnik</button>
                        <button type="button" class="btn btn-primary" id="saveStep2">Zapisz i przejdź dalej</button>
                    </form>
                </div>

                <!-- Krok 3 -->
                <div class="tab-pane fade" id="step3" role="tabpanel" aria-labelledby="step3-tab">
                    <form method="POST">
                        <h3>Dodaj nowy przepis - Krok 3: Instrukcje przygotowania</h3>
                            <div id="steps-list">
                                <div class="step-item">
                                    <div class="mb-3">
                                        <label for="step-0" class="form-label">Krok 1</label>
                                        <textarea class="form-control" id="step-0" name="steps[0]" placeholder="Opisz krok przygotowania" rows="3" required></textarea>
                                    </div>
                                    <div class="text-end">
                                        <button type="button" class="btn btn-danger remove-step">Usuń krok</button>
                                    </div>
                                </div>

                            </div>
                    </form>
                    <button type="button" class="btn btn-secondary" id="add-step">Dodaj krok</button>
                    <button type="button" class="btn btn-primary" id="saveStep3">Dalej</button>
                </div>

                <!-- Krok 4 -->

                <div class="tab-pane fade" id="step4" role="tabpanel" aria-labelledby="step4-tab">
                    <form method="POST" enctype="multipart/form-data">
                        <h3>Dodaj nowy przepis - Krok 4: Zdjęcie potrawy</h3>
                        <div class="mb-3">
                            <label for="recipe-image" class="form-label">Zdjęcie potrawy</label>
                            <input type="file" class="form-control" id="recipe-image" name="recipeImage" accept="image/*" required>
                        </div>
                        <button type="submit" class="btn btn-success">Zapisz przepis</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
